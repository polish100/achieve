  <div class="row">
    <div class="col-md-offset-4 col-md-4">
      <h2>アイコンの変更</h2><br>
    </div>
  </div>

  <div class="row">
    <div class="col-md-offset-4 col-md-4">
  <div class="panel panel-success">
    <div class="panel-heading">
            <h3 class="panel-title"><%= @user.name.blank? ? "名無しさん" : @user.name %>のアイコン</h3>
          </div>
      <div class="panel-body">
<%= form_for(@user) do |f| %>

    <%= image_tag(@user.img_path,:size => "48x48",:align => 'center') %><br>
    <br>

    <%= f.file_field :image%><br>
    <%= f.submit "更新" %>
    <br>
    <br>
    <%= link_to 'ユーザ一覧に戻る', users_path %>
<% end %>
            </div>
  </div>
          </div>
  </div>