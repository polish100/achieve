
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

<div class="container">
 <form class="form-horizontal">
   <div class="row">
     <div class="col-md-offset-5 col-md-3 bg-info">
       <h2>ログイン</h2>
       <br>
       <div class="form-group">
         <%= f.label :メールアドレス %><br />
         <%= f.email_field :email, autofocus: true %>
       </div>
       <div class="form-group">
         <%= f.label :パスワード %><br />
         <%= f.password_field :password, autocomplete: "off" %>
       </div>
       <div class="form-group">
         <% if devise_mapping.rememberable? -%>
         <%= f.check_box :remember_me %>
         <%= f.label :パスワードを記憶する %>
         <% end -%>
       </div>
       <div class="actions">
         <%= f.submit "ログイン",class: "btn btn-primary"%>
       </div>
       <br>
       <a href="/users/auth/twitter" class="btn btn-lg btn-social btn-twitter">
         <i class="fa fa-twitter"></i> Twitterで登録する
       </a>
       <br>
       <a href="/users/auth/facebook" class="btn btn-lg btn-social btn-facebook">
         <i class="fa fa-facebook"></i> Facebookで登録する
       </a>
       <br>
       <%= render "devise/shared/links" %>
       <br>
       <%= link_to "TOPに戻る", root_path %>
    </div>
  </div>
</form>
<% end %>
</div>