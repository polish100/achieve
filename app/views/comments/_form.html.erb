<%= form_for(comment) do |f| %>
  <%= render 'shared/error_messages', resource: comment %>
  <%= f.hidden_field :blog_id %>
  <div class="field">
    <%= f.text_field :content, placeholder: "内容", class: "form-control"  %>
  </div>
  <div class="actions">
    <%= f.submit comment_submit_value, class: "btn btn-info" %>
  </div>
<% end %>
