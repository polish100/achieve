<div class="container">
  <div class="task col-md-10 col-md-offset-1 col-sm-10 col-sm-offset-1 col-xs-12 table-responsive">
    <h3>タスク一覧</h3>
    <table class="table table-hover">
    <thead>
      <tr>
        <th>ユーザ</th>
        <th>タイトル</th>
        <th>内容</th>
        <th>期限</th>
        <th>担当者</th>
        <th>完了</th>
        <th>ステータス</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @tasks.each do |task| %>
        <tr>
          <td><%= task.user.name %></td>
          <td><%= task.title %></td>
          <td><%= task.content %></td>
          <td><%= task.deadline %></td>
          <td><%= task.charge.name %></td>
          <td><%= if task.done? then "完了" else "未完了" end %></td>
          <td><%= task.status == 1? "対応中" : "未着手" %></td>
          <td><%= link_to '見る', user_task_path(task.user, task) %></td>
          <td><%= link_to '編集', edit_user_task_path(task.user, task) %></td>
          <td><%= link_to '削除', user_task_path(task.user, task), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to '新規作成', new_user_task_path(@user) %>
</div>
</div>
