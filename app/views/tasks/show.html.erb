<p id="notice"><%= notice %></p>
<div class="container">
  <div class="task col-md-10 col-md-offset-1 col-sm-10 col-sm-offset-1 col-xs-12 table-responsive">
  <h3>タスク詳細</h3>
<p>
  <strong>ユーザ:</strong>
  <%= @task.user.name %>
</p>

<p>
  <strong>タイトル:</strong>
  <%= @task.title %>
</p>

<p>
  <strong>内容:</strong>
  <%= @task.content %>
</p>

<p>
  <strong>期限:</strong>
  <%= @task.deadline %>
</p>

<p>
  <strong>担当:</strong>
  <%= @task.charge.name %>
</p>

<p>
  <strong>完了:</strong>
  <%= if @task.done? then "完了" else "未完了" end %>
</p>

<p>
  <strong>ステータス:</strong>
  <%= @task.status == 1? "対応中" : "未着手" %>
</p>

<%= link_to '編集', edit_user_task_path(@task.user, @task) %> |
<%= link_to '戻る', user_tasks_path(@task.user) %>
</div>
</div>
