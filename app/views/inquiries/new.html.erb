  <div class="row">
    <div class="col-md-offset-4 col-md-4">
      <div class="panel panel-primary">
        <div class="panel-heading">
          <h3 class="panel-title">お問い合わせ</h3>
        </div>


      <div class="panel-body">
<%= form_for @inquiry, :url => inquiries_confirm_path do |f| %>
  <% if @inquiry.errors.any? %>
    <div class="alert alert-danger" role="alert">
      <strong>入力内容にエラーがあります</strong>

      <ul>
        <% @inquiry.errors.each do |attr, msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <table class="table">
    <tr>
      <th>件名</th>
      <td><%= f.text_field :subject %></td>
    </tr>
    <tr>
      <th>名前</th>
      <td><%= f.text_field :name %></td>
    </tr>
    <tr>
      <th>メールアドレス</th>
      <td><%= f.text_field :email %></td>
    </tr>
    <tr>
      <th>お問い合わせ内容</th>
      <td><%= f.text_area :message %></td>
    </tr>
  </table>
  <%= f.submit '確認', class: 'btn btn-primary' %>
<br><br>
<%= link_to 'TOP', root_path %>
<% end %>
                </div>
      </div>
    </div>
  </div>
